<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.LoginController">
    <Label text="Rezk calculator Login" />
    <TextField fx:id="txtUsername" promptText="Username" />
    <PasswordField fx:id="txtPassword" promptText="Password" />
    <Button fx:id="btnLogin" text="Login" onAction="#handleLogin" />
    <Label fx:id="lblError" textFill="red" />
</VBox>
