<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="266.0" prefWidth="411.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginPageController">

    
    <top>
        <HBox alignment="CENTER" spacing="10">
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Admin Login - For Phone Booking" />
        </HBox>
    </top>

    
    <center>
        <VBox alignment="CENTER" spacing="15" style="-fx-padding: 20px;">
            <Label text="Username:" />
            <TextField fx:id="usernameTextField" maxHeight="20.0" maxWidth="100.0" minHeight="-Infinity" minWidth="-Infinity" prefHeight="20.0" prefWidth="100.0" promptText="Enter admin username" />

            <Label text="Password:" />
            <PasswordField fx:id="passwordField" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="20.0" prefWidth="100.0" promptText="Enter password" />

            <Button fx:id="loginButton" onAction="#handleLogin" text="Login" />
            <Label fx:id="errorLabel" style="-fx-text-fill: red;" />
        </VBox>
    </center>
</BorderPane>
