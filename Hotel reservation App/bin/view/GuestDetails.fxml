<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="425.0" prefWidth="422.0" spacing="20" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.GuestDetailsController">
    <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Guest Details" />
    
   <Label fx:id="roomAllocationLabel" style="-fx-font-size: 14px;" text="Room allocation will be displayed here." wrapText="true" />
    
    <Label text="First Name:" />
    <TextField fx:id="guestFirstNameTextField" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="25.0" prefWidth="120.0" promptText="Enter first name" />
    
    <Label text="Last Name:" />
    <TextField fx:id="guestLastNameTextField" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="25.0" prefWidth="120.0" promptText="Enter last name" />
    
    <Label text="Guest Phone:" />
    <TextField fx:id="guestPhoneTextField" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="25.0" prefWidth="122.0" promptText="Enter phone number" />
    
    <Button fx:id="confirmGuestDetailsButton" onAction="#confirmGuestDetails" text="Confirm Details" />
</VBox>